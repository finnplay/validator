{
    "$id": "monitoring",
    "title": "Monitoring configuration",
    "description": "",
    "type": "object",
    "properties": {
        "enabled": {
            "type": "string"
        },
        "params": {
            "description": "",
            "type": "object",
            "properties": {
                "module": {
                    "type": "string"
                }
            }
        },
        "scrape_config": {
            "description": "",
            "type": "object",
            "properties": {
                "metrics_path": {
                    "type": "string",
                    "pattern": "^(/[a-zA-Z-]*)+$"
                },
                "scrape_interval": {
                    "type": "string",
                    "pattern": "^((([0-9]+)y)?(([0-9]+)w)?(([0-9]+)d)?(([0-9]+)h)?(([0-9]+)m)?(([0-9]+)s)?(([0-9]+)ms)?|0)$"
                },
                "scrape_timeout": {
                    "type": "string",
                    "pattern": "^((([0-9]+)y)?(([0-9]+)w)?(([0-9]+)d)?(([0-9]+)h)?(([0-9]+)m)?(([0-9]+)s)?(([0-9]+)ms)?|0)$"
                },
                "auth_config": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": ["basic_auth"]
                        },
                        "credentials": {
                            "type": "string"
                        },
                        "additionalProperties": false
                    }
                },
                "target_config": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": ["consul_service_discovery", "static"]
                        },
                        "addresses": {
                            "type": "string",
                            "pattern": "^([a-zA-Z0-9-.]+:[0-9]{2,5},?)+$"
                        },
                        "additionalProperties": false
                    }
                },
                "additionalProperties": false
            }
        },
        "relabel_config": {
            "description": "",
            "type": "object",
            "patternProperties": {
                "^[-_a-z]*$": {
                    "properties": {
                        "source_labels": {
                            "type": "string"
                        },
                        "separator": {
                            "type": "string"
                        },
                        "target_label": {
                            "type": "string"
                        },
                        "regex": {
                            "type": "string"
                        },
                        "modulus": {
                            "type": "integer"
                        },
                        "replacement": {
                            "type": "string"
                        },
                        "action": {
                            "type": "string",
                            "enum": ["replace", "keep", "drop"]
                        }
                    },
                    "additionalProperties": false
                }
            }
        },
        "alerting_rule": {
            "description": "",
            "type": "object",
            "patternProperties": {
                "^[-_a-z]*$": {
                    "properties": {
                        "expression": {
                            "type": "string"
                        },
                        "condition": {
                            "type": "string",
                            "pattern": "^(==|!=|>|<|>=|<=) ?[0-9.]+$"
                        },
                        "duration": {
                            "type": "string",
                            "pattern": "^((([0-9]+)y)?(([0-9]+)w)?(([0-9]+)d)?(([0-9]+)h)?(([0-9]+)m)?(([0-9]+)s)?(([0-9]+)ms)?|0)$"
                        },
                        "labels": {
                            "type": "object",
                            "properties": {
                                "severity": {
                                    "type": "string",
                                    "enum": ["low", "medium", "high", "critical"]
                                },
                                "impact": {
                                    "type": "string",
                                    "enum": ["low", "medium", "high", "critical"]
                                }
                            },
                            "additionalProperties": true
                        },
                        "annotations": {
                            "type": "object",
                            "properties": {
                                "summary": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": true
                        }
                    },
                    "additionalProperties": false
                }
            }
        },
        "recording_rule": {
            "description": "",
            "type": "object",
            "patternProperties": {
                "^[-_a-z]*$": {
                    "properties": {
                        "record": {
                            "type": "string"
                        },
                        "expression": {
                            "type": "string"
                        },
                        "labels": {
                            "type": "object",
                            "properties": {}
                        }
                    },
                    "required": [
                        "record",
                        "expression"
                    ],
                    "additionalProperties": false
                }
            }
        }
    },
    "additionalProperties": false
}
