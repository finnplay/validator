{
    "$id": "customer",
    "title": "Customer",
    "description": "A platform customer",
    "type": "object",
    "properties": {
        "enabled": {
            "description": "",
            "type": "string"
        },
        "global": {
            "description": "Global config",
            "$ref": "https://github.com/finnplay/validator/raw/master/schema/global.json"
        },
        "contacts": {
            "type": "object",
            "properties": {
                "email": {
                    "alert": {
                        "$ref": "#/definitions/email"
                    },
                    "primary": {
                        "$ref": "#/definitions/email"
                    }
                }
            }
        },
        "component": {
            "type": "object",
            "patternProperties": {
                "[_-A-Za-z0-9]+": {
                    "$ref": "https://github.com/finnplay/validator/raw/master/schema/component.json"
                }
            }
        },
        "environment": {
            "type": "object",
            "patternProperties": {
                "prod|stage": {
                    "type": "object",
                    "properties": {
                        "component": {
                            "type": "object",
                            "patternProperties": {
                                "[_-A-Za-z0-9]+": {
                                    "$ref": "https://github.com/finnplay/validator/raw/master/schema/component.json"
                                }
                            }
                        }
                    }
                }
            },
            "additionalProperties": false
        }
    },
    "definitions": {
        "email": {
            "type": "string",
            "pattern": "^.*@.*\\..*$"
        }
    }
}
